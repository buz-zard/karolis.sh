{
  "private": true,
  "repository": {
    "type": "git",
    "url": "git@github.com:karolis-sh/karolis.sh.git"
  },
  "license": "MIT",
  "author": "Karolis Å arapnickis",
  "scripts": {
    "build": "gatsby build",
    "check-deps": "npm ls >/dev/null",
    "clean": "rimraf public .cache",
    "deploy": "gatsby-plugin-s3 deploy",
    "format": "run-p format:*",
    "format:js": "prettier --write '**/*.*'",
    "format:package-json": "sort-package-json",
    "lint": "eslint .",
    "qa": "npm run lint",
    "release": "run-s clean build deploy",
    "start": "gatsby develop",
    "try": "run-s clean build && gatsby serve",
    "upgrade-interactive": "npm-check --update"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn lint"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix"
    ],
    "*.{json,md}": [
      "pretty-quick --staged"
    ],
    "package.json": [
      "sort-package-json"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@emotion/core": "^10.0.17",
    "@emotion/styled": "^10.0.17",
    "gatsby": "^2.20.28",
    "gatsby-image": "^2.2.20",
    "gatsby-plugin-advanced-sitemap": "^1.4.4",
    "gatsby-plugin-emotion": "^4.1.7",
    "gatsby-plugin-google-analytics": "^2.1.17",
    "gatsby-plugin-layout": "^1.1.8",
    "gatsby-plugin-preact": "^3.1.11",
    "gatsby-plugin-prefetch-google-fonts": "^1.4.3",
    "gatsby-plugin-react-helmet": "^3.1.8",
    "gatsby-plugin-remove-serviceworker": "^1.0.0",
    "gatsby-plugin-robots-txt": "^1.5.0",
    "gatsby-plugin-s3": "^0.3.3",
    "preact": "^10.0.0-rc.3",
    "prop-types": "^15.7.2",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "react-helmet": "^5.2.1",
    "react-inlinesvg": "^1.1.6"
  },
  "devDependencies": {
    "@k.sh/eslint-config": "^1.16.1",
    "babel-eslint": "^10.1.0",
    "cz-conventional-changelog": "^3.1.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.1.7",
    "npm-check": "^5.9.2",
    "npm-run-all": "^4.1.3",
    "prettier": "^2.0.5",
    "pretty-quick": "^2.0.1",
    "rimraf": "^3.0.2",
    "sort-package-json": "^1.42.0"
  }
}
